{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Routes": {
      "todoapp-service" : {
        "ClusterId": "todoapp-service",
        "Match": {
          "Path": "/services/todoapp/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/services/todoapp"
          }
        ]
      }
    },
    "Clusters": {
      "todoapp-service": {
        "Destinations": {
          "todoapp-service": {
            "Address": "http://localhost:5288"
          }
        }
      }
    }
  }
}
