<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.NET.Build.Containers" Version="8.0.100" />
    </ItemGroup>

    <ItemGroup>
      <Content Include=".vitepress\config.mts" />
      <Content Include=".vitepress\theme\style.css" />
    </ItemGroup>

    <ItemGroup>
      <None Include=".vitepress\theme\index.ts" />
    </ItemGroup>

    <PropertyGroup>
        <ContainerRepository>boilerplate/docs</ContainerRepository>
        <ContainerImageTag>latest</ContainerImageTag>
    </PropertyGroup>

</Project>
