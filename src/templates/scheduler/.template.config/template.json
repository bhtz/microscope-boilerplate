{
  "$schema": "http://json.schemastore.org/template",
  "author": "Benjamin HEINTZ",
  
  "classifications": [
    "Scheduler",
    "TickerQ",
    "Postgres",
  ],
  
  "identity": "Microscope.Boilerplate.Scheduler",
  "name": "Microscope boilerplate scheduler",
  "shortName": "mcsp_scheduler",
  "sourceName": "Microscope.Boilerplate",

  "symbols": {
    "Docker": {
      "type": "parameter",
      "description": "Add Docker support",
      "datatype": "bool",
      "defaultValue": false
    },

    "Aspire": {
      "type": "parameter",
      "description": "Add Aspire support",
      "datatype": "bool",
      "defaultValue": false
    }
  },
  
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**/*",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json",
            ".idea/**/*"
          ]
        },
        
        {
          "condition": "(!Docker)",
          "exclude": [
            "src/IAC/Docker/docker-compose.yml",
          ]
        },
        {
          "condition": "(!Aspire)",
          "exclude": [
            "IAC/Aspire/**",
            "Microscope.Boilerplate.ServiceDefaults/**"
          ]
        },

        {
          "condition": "(!Docker && !Aspire)",
          "exclude": [
            "IAC/Docker/**"
          ]
        }
      ]
    }
  ]
}