{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "OIDC": {
    "Authority": "http://host.docker.internal:8083/realms/microscope/",
    "ClientId": "microscope-api"
  },

  "Persistence": {
//    "Framework" : "marten",
    "Framework" : "efcore",
    
    "ConnectionString": "User ID =postgres;Password=root;Server=localhost;Port=5432;Database=mcsp_app;",
//    "Schema" : "marten",
     "Schema" : "efcore",
    
        "Adapter": "postgres"
    //    "EnableMigration": "true"
  },

  "FeatureManagement": {
    "sampleFeatureFlagOne": true,
    "sampleFeatureFlagTwo": false
  },

  "AI": {
    "Provider": "openai",
    "EndPoint" : "https://api.openai.com/v1",
    "Model": "gpt-4o-mini"
  },

  "Users": {
    "Adapter": "keycloak",
    "UserServiceEndpoint": "http://localhost:8083/admin/realms/microscope/users"
  },

  "Mail": {
    "Adapter": "smtp"
  },

  "Storage": {
    "Adapter": "filesystem",
    "DefaultStorageContainer": "todoapp"
  },

  "Bus": {
    "Adapter": "rabbitmq",
    "Host": "amqp://guest:guest@localhost:5672",
    "Username" : "guest",
    "Password" : "guest"
  }
}

