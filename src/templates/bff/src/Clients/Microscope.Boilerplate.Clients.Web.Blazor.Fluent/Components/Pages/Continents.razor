@page "/continents"
@using Microscope.Boilerplate.Clients.SDK.GraphQL.Gateway.Components
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Continents</PageTitle>

<FluentLabel Typo="Typography.PageTitle">Continents</FluentLabel>
<FluentLabel Typo="Typography.Body">Subtitle</FluentLabel>

<UseGetContinents Context="result">
    <ChildContent>
        <FluentDataGrid Items="result.Continents.AsQueryable()"  >
            <PropertyColumn Property="@(p => p.Name)" Sortable="true" />
        </FluentDataGrid>
    </ChildContent>
    <ErrorContent>
        @result.First().Message
    </ErrorContent>
    <LoadingContent>
        <FluentSkeleton></FluentSkeleton>
        <FluentSkeleton></FluentSkeleton>
    </LoadingContent>
</UseGetContinents>
