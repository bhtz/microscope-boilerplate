@inherits LayoutComponentBase

<FluentDesignTheme Mode="@_mode" CustomColor="#02838f" StorageName="theme" />

<FluentLayout>
    <FluentHeader>
        <FluentIcon OnClick="@(() => IsExpanded = !IsExpanded)" Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" Style="margin-right: 10px; cursor: pointer;" />
        microscope
        <FluentSpacer />
        <FluentIcon OnClick="ToggleDarkMode" Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size20.DarkTheme())" Style="margin-right: 10px; cursor: pointer;" Color="Color.Fill"/>
        <FluentIcon OnClick="() => IsLanguageExpanded = !IsLanguageExpanded" Id="LanguageSelector" Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size20.LocalLanguage())" Style="margin-right: 10px; cursor: pointer;" Color="Color.Fill"/>
        <FluentMenu Anchor="LanguageSelector" @bind-Open="IsLanguageExpanded">
            <FluentMenuItem>FranÃ§ais</FluentMenuItem>
            <FluentMenuItem>English</FluentMenuItem>
        </FluentMenu>
        <FluentPersona 
            Initials="HB"
            Image="@(new Icons.Regular.Size24.Person().ToDataUri(color: "white"))"
            ImageSize="30px">
        </FluentPersona>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu IsExpanded="@IsExpanded" />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />

@code {
    public bool IsExpanded { get; set; } = true;
    public bool IsLanguageExpanded { get; set; }
    private DesignThemeModes _mode = DesignThemeModes.System;
    
    public void ToggleDarkMode() 
    {
        _mode = _mode == DesignThemeModes.Light 
            ? DesignThemeModes.Dark 
            : DesignThemeModes.Light;
    } 
}