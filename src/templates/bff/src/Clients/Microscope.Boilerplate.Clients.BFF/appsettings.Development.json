{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "BaseAddress": "http://localhost:5215/",

  "OIDC": {
    "Authority": "http://localhost:8083/realms/microscope/",
    "ClientId": "boilerplate",
    "ClientSecret": "**********",
    "NameClaimType": "name",
    //    "RoleClaimType": "roles",
    "Scopes": ["roles", "openid", "profile"]
  },

  "FeatureManagement": {
    "ShowUserPage": true,
    "DarkModeAvailable": true,
    "ShowAppVersion": true,
    "ShowInteractiveRenderMode": false
  },

  "GraphQLGateway": {
    "Scalars" : [
      "Single",
      "bigint",
      "timestamp"
    ]
  }

  //#if (Yarp)
  ,"ReverseProxy": {
      "Routes": {
        "post-service" : {
          "ClusterId": "post-service",
          "Match": {
            "Path": "/api/todos/{**catch-all}"
          },
          "Transforms": [
            {
              "PathRemovePrefix": "/api"
            }
          ]
        }
      },
      "Clusters": {
        "post-service": {
          "Destinations": {
            "post-service": {
              "Address": "https://jsonplaceholder.typicode.com"
            }
          }
        }
      }
    }
  //#endif
}
