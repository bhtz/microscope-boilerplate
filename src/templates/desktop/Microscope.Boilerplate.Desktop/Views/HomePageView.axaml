<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Microscope.Boilerplate.Desktop.ViewModels"
             x:DataType="viewModels:HomePageViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Microscope.Boilerplate.Desktop.Views.HomePageView">
    
    <StackPanel>
        <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="10">Microscope.Boilerplate.Desktop</TextBlock>
        <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="10" Text="{Binding Version}"></TextBlock>
    </StackPanel>
</UserControl>
