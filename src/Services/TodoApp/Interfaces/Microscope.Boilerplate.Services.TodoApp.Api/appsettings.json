{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },

  "Tenants": [
    {
      "Authority": "http://host.docker.internal:8083/realms/microscope",
      "Audience": "todo-service"
    }
  ],

  "MasterKey": "http://localhost:8083/realms/microscope_devmasterkey",

  "Users": {
    "Adapter": "keycloak",
    "UserServiceEndpoint": "http://host.docker.internal:8083/admin/realms/microscope/users"
  },

  "Mail": {
    "Adapter": "smtp"
  },
  
  "Storage": {
    "Adapter": "filesystem",
    "DefaultStorageContainer": "todoapp",
    "Host": "Uploads"
  },

  "Bus": {
    "Adapter": "rabbitmq",
    "Host": "rabbitmq://host.docker.internal",
    "Username" : "guest",
    "Password" : "guest"
  },

  "Persistence": {
    "Adapter": "postgres",
    "ConnectionString": "User ID =postgres;Password=root;Server=host.docker.internal;Port=5432;Database=postgres;Integrated Security=true;Pooling=true;",
    "EnableMigration": "true"
  },

  "FeatureManagement": {
    "sampleFeatureFlagOne": true,
    "sampleFeatureFlagTwo": false
  }
}
