{
  "$schema": "http://json.schemastore.org/template",
  "author": "Benjamin HEINTZ",
  "classifications": [
    "DDD",
    "Blazor",
    "Clean architecture",
    "Docs"
  ],
  "identity": "Microscope.Boilerplate.Fullstack",
  "name": "Microscope boilerplate fullstack",
  "shortName": "mcsp_fullstack",
  "sourceName": "Microscope.Boilerplate",
  "symbols": {
    "Documentation": {
      "type": "parameter",
      "description": "Whether to include documentation or not.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "E2E": {
      "type": "parameter",
      "description": "Whether to include E2E tests or not.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "CLI": {
      "type": "parameter",
      "description": "Whether to include CLI / console app or not.",
      "datatype": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!Documentation)",
          "exclude": "src/Docs/**"
        },
        {
          "condition": "(!E2E)",
          "exclude": "src/Clients/E2E/**"
        },
        {
          "condition": "(!CLI)",
          "exclude": "src/Clients/CLI/**"
        }
      ]
    }
  ]
}