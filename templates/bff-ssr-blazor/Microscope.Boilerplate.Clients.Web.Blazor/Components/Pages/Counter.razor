@page "/counter"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Counter> Loc

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@Loc["Title"]</MudText>
<MudText Class="mb-8">@Loc["SubTitle"]</MudText>

<MudText Class="mb-4">@Loc["CurrentCounterLabel"] @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">@Loc["ButtonLabel"]</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
